<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="contenedorBox" alignment="TOP_CENTER" minWidth="200.0" spacing="5.0" style="-fx-background-color: #aaa;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="encabezadoBox" alignment="CENTER_RIGHT" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0" prefWidth="200.0">
         <children>
            <ImageView fx:id="ahorcadoImage" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="NEVER">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </ImageView>
            <HBox fx:id="puntuacionBox" alignment="TOP_RIGHT" fillHeight="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0" prefWidth="150.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="puntuacionLabel" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="125.0" text="Puntuacion:" HBox.hgrow="NEVER">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font></Label>
                  <Label fx:id="puntuacionObtenidaLabel" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" text="0">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font></Label>
               </children>
            </HBox>
         </children>
      </HBox>
      <Label fx:id="palabraLabel" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0">
         <font>
            <Font size="25.0" />
         </font></Label>
      <HBox fx:id="letrasBox" alignment="CENTER" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="75.0" spacing="20.0" VBox.vgrow="SOMETIMES">
         <children>
            <Label fx:id="acertadasLabel" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" text="Palabras acertadas&#10;" textAlignment="CENTER" textFill="#25a42f" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label fx:id="falladasLabel" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" text="Palabras falladas&#10;" textAlignment="CENTER" textFill="#e20000" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox fx:id="introducirBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
         <children>
            <TextField fx:id="introducidoText" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="150.0" prefHeight="25.0" />
            <Button fx:id="letraButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefWidth="75.0" text="Letra" />
            <Button fx:id="resolverButton" mnemonicParsing="false" prefWidth="75.0" text="Resolver" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
